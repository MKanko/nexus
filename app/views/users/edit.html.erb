<h1>Edit User</h1><br>

    <%= form_for @user do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username %><br><br>

        <%= f.label :email %>
        <%= f.text_field :email %><br><br>

        <%= f.label :password %>
        <%= f.password_field :password %><br><br>
        
        <%= f.label :admin %>
        <%= f.check_box :admin %><br><br>

        <%= f.submit 'Create User' %> 
    <% end %> 

    <%= link_to 'Delete User', current_user, method: :delete: { confirm: "Are you sure?" } %>   