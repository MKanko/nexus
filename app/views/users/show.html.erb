

<% if @user.image %>
    <img src=<%= @user.image %>/>
<% end %>

<h2>Welcome <%= @user.username %></h2>

<p><%= current_date %></p>

<p>Admin: <%= @user.admin %></p>

<h4>Your work schedule for today:</h4>

    <div class='ui blue segment'>
        <ul>
            <% @user.tasks.each do |task| %>
                <% if task.date.strftime("%A %d %b %Y") == current_date %>
                    <li><%= task.date.strftime("%A %d %b %Y %l:%M %p") %></li>
                    <%= link_to task.name, task_path(task) %><br><br>
                <% end %>                       
            <% end %>
        </ul>
    </div>

<h4>Your Companies:</h4>

    <div class='ui blue segment'>
        <ul>
            <% @user.companies.each do |company| %>
                    <li><%= link_to company.company_name, company_path(company) %></li>                       
            <% end %>
        </ul>
    </div>

    


    <% if logged_in? %>
        <div class='ui button'>
            <%= link_to 'Edit User', edit_user_path %><br> 
        </div>
        <div class='ui button'>
            <%= link_to 'Create Company', new_company_path %><br>
        </div>
        <div class='ui button'>
            <%= link_to 'Create Schedule', new_schedule_path %><br> 
        </div>
        <div class='ui button'>
            <%= link_to 'View Schedules', schedules_path(@user.schedules) %>
        </div>
    <% end %>

   

  

    

    

