<% if @user.image %>
    <img src=<%= @user.image %>/>
<% end %>

<h2>Welcome <%= @user.username %></h2>

    <h3>Your Contacts:</h3>

        <ul>
            <% @user.contacts.each do |con| %>
                <li><%= link_to con.name, contact_path(con) %></li>
            <% end %>
        </ul> 

        <h3>Your companies:</h3>
       <ul>
           <% @user.companies.each do |company| %>
               <li><%= link_to company.company_name, contact_company_path(company.contact_id, company.id) %></li>
           <% end %>
       </ul>

       <h3>Your Schedules:</h3>
       <ul>
           <% @user.schedules.each do |sched| %>
               <li><%= link_to sched.name, schedule_path(sched) %></li>
           <% end %>
       </ul>

       <h3>Your Tasks:</h3>
       <ul>
           <% @user.tasks.each do |task| %>
               <li><%= link_to task.name, task_path(task) %></li>
           <% end %>
       </ul>


    <% if logged_in? %>
        <%= link_to 'Edit User', edit_user_path %><br> 
    <% end %>

    <% if logged_in? %>
        <%= link_to 'Create Contact', new_contact_path %><br> 
    <% end %>

   

    <% if logged_in? %>
        <%= link_to 'Create Schedule', new_schedule_path %><br> 
    <% end %>

    <% if logged_in? %>
        <%= link_to 'Create Task', new_task_path %><br> 
    <% end %>

    <% if logged_in? %>
        <%= link_to 'Contacts', contacts_path %><br> 
    <% end %>

    

    

