

<% if @user.image %>
    <img src=<%= @user.image %>/>
<% end %>

<h2>Welcome <%= @user.username %></h2>

<p><%= current_datetime %></p>

<p>Admin: <%= @user.admin %></p>

<h4>Your work schedule for today:</h4>

    <div class='ui segment'>
        <ul>
        <% @user.tasks.each do |task| %>
            <li><%= task.date.strftime("%A %d %b %Y %l:%M %p") %></li>
            <%= link_to task.name, task_path(task) %><br><br>                       
        <% end %>
        </ul>
    </div>

    <h4>Your Schedules:</h4>

        <ul>
            <% @user.schedules.each do |sched| %>
                <li><%= link_to sched.name, schedule_path(sched) %></li>
            <% end %>
        </ul>

    <h4>Your Tasks:</h4>

        <ul>
           <% @user.tasks.each do |task| %>
               <li><%= link_to task.name, task_path(task) %></li>
           <% end %>
       </ul>




    <% if logged_in? %>
        <%= link_to 'Edit User', edit_user_path %><br> 
    <% end %>

    <% if logged_in? %>
        <%= link_to 'Create Company', new_company_path %><br>
    <% end %>

   

    <% if logged_in? %>
        <%= link_to 'Create Schedule', new_schedule_path %><br> 
    <% end %>

   

  

    

    

