<%= form_for @task do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %><br><br>

    <%= f.label :type %>
    <%= f.text_field :type %><br><br>

    <%= f.label :Description %>
    <%= f.text_field :notes %><br><br>
    
    <%= f.label :deadline %>
    <%= f.datetime_select :deadline %><br><br>

    <%= f.label :date %>
    <%= f.datetime_select :date %><br><br>


    <%= f.label :status %>
    <%= f.text_field :status %><br><br>

    <%= f.submit 'Submit' %>
<% end %>